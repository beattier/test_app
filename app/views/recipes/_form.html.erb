<%= simple_form_for(@recipe) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :short_description %>
    <%= f.input :description %>
    <%= f.input :method %>
    <%= f.input :net_carbs_in_g %>
    <%= f.input :calories_in_kcal %>
    <%= f.association :cuisine %>
    <%= f.association :mealtype %>
    <%= f.association :collection %>
    <%= f.association :user %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
