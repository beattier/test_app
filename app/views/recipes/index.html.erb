<h1>Listing recipes</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Short description</th>
      <th>Description</th>
      <th>Method</th>
      <th>Net carbs in g</th>
      <th>Calories in kcal</th>
      <th>Cuisine</th>
      <th>Mealtype</th>
      <th>Collection</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.title %></td>
        <td><%= recipe.short_description %></td>
        <td><%= recipe.description %></td>
        <td><%= recipe.method %></td>
        <td><%= recipe.net_carbs_in_g %></td>
        <td><%= recipe.calories_in_kcal %></td>
        <td><%= recipe.cuisine %></td>
        <td><%= recipe.mealtype %></td>
        <td><%= recipe.collection %></td>
        <td><%= recipe.user %></td>
        <td><%= link_to 'Show', recipe %></td>
        <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
        <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recipe', new_recipe_path %>
